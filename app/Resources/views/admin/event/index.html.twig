{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_event_index' %}

{% block main %}        
    
    <h1>Список событий</h1>
    
    
	<div class="row">
        <div class="pull-left">
            <h3 class="current_date_region"></h3>
        </div>
        <div class="pull-right form-inline">
            <div class="btn-group">
                <button class="btn btn-primary" data-calendar-nav="prev"><< Назад</button>
                <button class="btn btn-success" data-calendar-nav="today">Сегодня</button>
                <button class="btn btn-primary" data-calendar-nav="next">Вперед >></button>
            </div>
            <!--<div class="btn-group">
                <button class="btn btn-warning" data-calendar-view="year">Год</button>
                <button class="btn btn-warning active" data-calendar-view="month">Месяц</button>
                <button class="btn btn-warning" data-calendar-view="week">Неделя</button>
                <button class="btn btn-warning" data-calendar-view="day">День</button>
            </div>-->
        </div>
    </div>    
    <div class="row">
        <div class="span9">
            <div id="calendar" class="{{ calendar_class }}"></div>
        </div>        
    </div>    
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_event_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus"></i> Создать событие
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
